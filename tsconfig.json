{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"declaration": true,
		"declarationMap": true,
		"target": "ES6",
		"moduleResolution": "node",
		"module": "esnext",
		"allowSyntheticDefaultImports": true,
		"lib": ["ES2024", "DOM"],
		"composite": true,
		"removeComments": false,
		"outDir": "dist",
		"rootDir": "src"
	},
	"include": ["src/**/*.ts", "src/*.ts"],
	"references": []
}
